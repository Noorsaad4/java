package dairehesap;

public class Main {

	public static void main(String[] args) {
	double yariCap=4;
	double pi=3.1416;
	double daireAlan=0;
	double daireCevre=0;
	daireAlan=pi*yariCap*yariCap;
	System.out.println("daire'nin Alaný="+daireAlan);
	daireCevre=2*pi*yariCap;
	System.out.println("daire'nin Çevresi="+daireCevre);
	
	}

}
